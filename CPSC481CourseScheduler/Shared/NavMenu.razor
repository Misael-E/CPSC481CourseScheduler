@inject CPSC481CourseScheduler.Services.ICourseService _CourseService;
<div class="nav-bar">
	<div class="title">
		<span>Schedule Builder</span>
	</div>
		<select class="semester-select">

			@foreach (var semester in SemesterList)
			{
				<option class="semester-option" value="@semester.SemesterDisplayName"> @semester.Season @semester.Year </option>
			}

		</select>
	<nav class="nav-bar-items">
		<div class="nav-button">
			<NavLink class="nav-button-link" title="Search Recommended Courses and Add them to Selections/Bookmarks" href="browse" Match="NavLinkMatch.All">
				<span class="oi oi-grid-three-up" aria-hidden="true"></span> Browse
			</NavLink>
		</div>
		<div class="nav-button">
			<NavLink class="nav-button-link" title="Add the Selected/Bookmarked Courses to the timetable and Finalize them" href="plan">
				<span class="oi oi-calendar" aria-hidden="true"></span> Plan
			</NavLink>
		</div>
		<div class="nav-button">
			<NavLink class="nav-button-link" title="Share the schedule with friends" href="share">
				<span class="oi oi-share" aria-hidden="true"></span> Share
			</NavLink>
		</div>
	</nav>
</div>


@code {
	List<Semester> SemesterList = new List<Semester>();

	protected override void OnInitialized()
	{
		SemesterList = _CourseService.GetAllSemesters();
	}

