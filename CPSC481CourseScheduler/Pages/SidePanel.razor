@page "/side-panel"
  
<div>
  <div class="container-fluid tab no-padding">
    <div class="tab-bar">
        <button class="top-button" style="@(tab1?" background-color:#ffd16b;":"")" @onclick="x=>ActiveTab(1)">
           Selected Courses
        </button>
        <button class="top-button" style="@(tab2?" background-color:#ffd16b;":"")" @onclick="x=>ActiveTab(2)">
          Bookmarks
        </button>
    </div>
  </div>

    @if (tab1)
    {
        <div class="tab-content">
            @foreach (var course in courses)
            {
                <div class="card border-secondary">
                    <div class="card-header " style="font-size:small; background-color:#DC7633;">
                        <div class="container-fluid" style="padding:0">
                            <div class="row">
                                <div class="col-auto">
                                    @course.CourseCode
                                    
                                </div>
                                <div class="col-auto">
                                    @course.CourseName
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" style="padding-bottom:0">
                        <p class="card-text" style="text-align:left; font-size:small">
                            <div class="container-fluid" style="padding:0" >
                                <div class="row">
                                    <div class="col-4" style="margin-bottom:1%">
                                        <b>Section: </b>@course.LectureNumber
                                    </div>
                                   <div class="col-4">

                                    </div>
                                    <div class="col-4" style="margin-bottom:1%">
                                        <b>Instructor: </b>@course.InstructorName
                                    </div>
                                    <div class="col-12" style="margin-bottom:1%">
                                        <b>Timings:</b> @course.Days @course.CourseTime
                                    </div>
                                    <div class="col-6">
                                        <b>Location: </b>@course.LectureLocation
                                    </div>
                                    <div class="col-2">
                                    </div>
                                    <div class="col-4">
                                        <b>Seats: </b>@course.Seats
                                    </div>
                                </div>
                            </div>
                        </p>
                    </div>
                </div>
            }
        </div>
    }

  @if(tab2)
  {
  <div class="tab-content">
    @foreach (var course in BookmarkedCourses)
    {
    <div class="card">
      <div class="card-header bg-warning" style="text-align:center">
        @course.CourseCode
      </div>
      <div class="card-body">
        <h5 class="card-title">@course.CourseName</h5>
        <b>Description </b>
        <p class="card-text" style="text-align:left; font-size:small">@course.Description</p>
        <div>
                            <button class="btn btn-info" >
                Add to Selection
            </button>
        </div>
      </div>
    </div>
    }
  </div>
  }
</div>



<style>
    .side-panel {
        border-radius: 10px important;
    }
  .tab {
    background-color: orange;
    }

    .tab-bar {
        display: flex;
        flex-direction: row;
    }
 .card {
    padding: 10px;
    margin-bottom: 10px;
    background-color: white;
    }
.tab button{
    background-color: orange;
    border: none;
    outline: none;
    padding: 8px;
    font-weight: bold;
    font-size: 12px;
    }

.tab:hover{
    background-color: orange;
}
.tab-content {
    background-color: #ffd16b;
    padding: 10px;
    overflow-y: scroll;
    max-height: 70vh;
    display:flex;
    flex-direction: column;
    scroll-behavior: smooth;
    border: thick double #ffd16b;
    
}

.top-button {
    width: 100%;
}

.top-button:hover {
    background-color: #FAD7A0 ;
}

 .no-padding {
        padding: 0;
  }


</style>

